<%= simple_form_for [@wisdom, @wisdom.comments.build], :html => { :class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.input :body, 
      :placeholder => "enter comment", 
      :input_html => {:rows => 4, :class => "form-control"} ,
      label: false %>
  </div>
  <div class="form-group">
    <%= f.button :submit, :class=>"btn btn-success btn-block" %>
  </div>
<% end %>
